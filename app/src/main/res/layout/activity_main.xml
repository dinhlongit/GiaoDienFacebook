<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context=".MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Chèn hình ảnh chữ FACEBOOK bằng ImageView -->
    <ImageView
        android:id="@+id/imfb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_facebook"
        android:layout_marginLeft="@dimen/edt_magin_left"
        android:layout_marginRight="@dimen/edt_magin_right"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="@dimen/edt_magin_bottom"
        />
    <EditText
        android:id="@+id/edemail"
        android:layout_below="@+id/imfb"
        android:layout_marginLeft="@dimen/edt_magin_left"
        android:layout_marginRight="@dimen/edt_magin_right"
        android:layout_marginTop="@dimen/edt_magin_top"
        android:layout_marginBottom="@dimen/edt_magin_bottom"
        android:padding="@dimen/text_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cover"
        android:textColor="@color/black"
        android:text="@string/hint_email_phone"

        />
    <EditText
        android:id="@+id/edpass"
        android:layout_below="@+id/edemail"
        android:layout_marginLeft="@dimen/edt_magin_left"
        android:layout_marginRight="@dimen/edt_magin_right"
        android:layout_marginTop="@dimen/edt_magin_top"
        android:layout_marginBottom="@dimen/edt_magin_bottom"
        android:padding="@dimen/text_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/black"
        android:text="@string/hint_pass"
        android:background="@drawable/cover"

        />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edpass"
        android:layout_marginLeft="@dimen/edt_magin_left"
        android:layout_marginRight="@dimen/edt_magin_right"
        android:layout_marginTop="@dimen/edt_magin_top"
        android:background="@drawable/cover_button"
        android:text="@string/text_login"
        android:textSize="@dimen/text_size_large"
        android:textAllCaps="false"


        />

    <TextView
        android:id="@+id/tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/edt_magin_bottom"
        android:gravity="center"
        android:text="@string/text_sign_up"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"


        />


    <Button

        android:id="@+id/btc"
        android:layout_width="@dimen/edt_layout_width"
        android:layout_height="@dimen/edt_layout_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="@dimen/edt_marginEnd"
        android:background="@drawable/cover_button"
        android:text="?"
        android:textSize="25dp"
        android:textColor="@color/white"



        />


    </RelativeLayout>

